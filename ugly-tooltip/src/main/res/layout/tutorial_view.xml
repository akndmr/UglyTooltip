<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/view_group_tutor_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/tooltip_radius"
    app:cardElevation="0dp"
    android:layout_margin="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:paddingTop="@dimen/text_padding_12"
            android:paddingHorizontal="@dimen/text_padding_12"
            android:id="@+id/text_title"
            tools:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:textSize="@dimen/title_size"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Description description description description description description"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/text_padding_12"
            android:paddingRight="@dimen/text_padding_12"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/ll_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_previous"
                android:paddingLeft="@dimen/text_padding_12"
                android:paddingTop="@dimen/text_padding_12"
                android:paddingBottom="@dimen/text_padding_12"
                android:layout_width="@dimen/buttom_width_small"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_white"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                tools:text="@string/previous"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_previous"
                android:layout_width="@dimen/buttom_width_small"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_padding_12"
                android:paddingTop="@dimen/text_padding_12"
                android:paddingBottom="@dimen/text_padding_12"
                android:gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_left_arrow"/>
            <LinearLayout
                android:id="@+id/view_group_indicator"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_next"
                android:paddingRight="@dimen/text_padding_12"
                android:paddingVertical="@dimen/text_padding_12"
                android:layout_width="@dimen/buttom_width_small"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:background="@drawable/selector_white"
                tools:text="@string/next"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_next"
                android:layout_width="@dimen/buttom_width_small"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/text_padding_12"
                android:paddingVertical="12dp"
                android:gravity="center"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_right_arrow"/>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>